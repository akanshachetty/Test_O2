<project name="testing" basedir="." default="copy">
	<property file="deploy_property" />
        
	<path id="jsch.path">
	            <pathelement location="${ANT_HOME}/lib/ant-jsch.jar" />
	            <pathelement location="${ANT_HOME}/lib/jsch-0.1.54.jar" />
	        </path>

	        <taskdef name="scp" classname="org.apache.tools.ant.taskdefs.optional.ssh.Scp" classpathref="jsch.path" />
	        <taskdef name="sshexec" classname="org.apache.tools.ant.taskdefs.optional.ssh.SSHExec" classpathref="jsch.path" />
	
	<target name="zip_creation">
		<touch file="ManageOrder-master/ManageOrder-master/ManageOrder_Osb_2_0/${file_name}" />
		<delete dir="ManageOrder-master/ManageOrder-master/ManageOrder_Osb_2_0/ManageOrder_2_0" />
		<zip destfile="ManageOrder_Osb_2_0.zip" basedir="ManageOrder-master/ManageOrder-master/ManageOrder_Osb_2_0" />
	</target>

	<target name="copy" depends="zip_creation">
		<scp file="zip_file/osb.zip"
		todir="${user_name}@{target_server}:/tmp/osb_release/ref/"
		keyfile="${user.home}/.ssh/id_rsa"/>
	</target>

</project>

