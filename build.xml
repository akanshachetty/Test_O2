<project name="testing" basedir="." default="copy">
	<property file="deploy_property" />
        
	<taskdef name="scp" classname="org.apache.tools.ant.taskdefs.optional.ssh.Scp"/>
	 <taskdef name="sshexec" classname="org.apache.tools.ant.taskdefs.optional.ssh.SSHExec" />
	
	<target name="zip_creation">
		<mkdir dir="zip_file"/>
		<zip destfile="zip_file/osb.zip" basedir="ManageOrder_Osb_2_0" />
	</target>

	<target name="copy" depends="zip_creation">
		<scp file="zip_file/osb.zip"
		todir="${user_name}@{target_server}:/tmp/osb_release/ref/"
		keyfile="${user.home}/.ssh/jenkinsPub"/>
	</target>

</project>

